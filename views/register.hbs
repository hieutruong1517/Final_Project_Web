<body class="bg-gradient-primary" style="background: linear-gradient(rgba(24,188,156,0.96), white);">
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-12 col-xl-10">
                <div class="card shadow-lg o-hidden border-0 my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-flex">
                                <div class="flex-grow-1 bg-login-image" style="background: url(&quot;/images/register.png&quot;) center / contain no-repeat;text-align: left;"></div>
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h4 class="text-dark mb-4">Đăng ký thành viên mới</h4>
                                    </div>
                                    <form class="user" method="post" action="/register">
                                        <div class="mb-3"><input class="form-control" type="text" placeholder="Họ và tên" name="fullname"></div>
                                        <div class="mb-3"><input class="form-control" type="text" placeholder="Số điện thoại" name="phone"></div>
                                        <div class="mb-3"><input class="form-control form-control-user" type="email" id="exampleInputEmail-1" aria-describedby="emailHelp" placeholder="Email" name="email"></div>
                                        <div class="mb-3"><input class="form-control" type="text" placeholder="Địa chỉ" name="address"></div>
                                        <div class="mb-3">
                                            <div>
                                                <p style="margin-bottom: 0px;">Ngày sinh</p>
                                            </div>
                                            <div><input class="form-control" type="date" name="birthdate"></div>
                                        </div>
                                        <div class="mb-3">
                                            <div>
                                                <p style="margin-bottom: 0px;">Mặt trước CMND</p>
                                            </div>
                                            <div><input class="form-control" type="file" name="frontImg"></div>
                                        </div>
                                        <div class="mb-3">
                                            <div>
                                                <p style="margin-bottom: 0px;">Mặt sau CMND</p>
                                            </div>
                                            <div><input class="form-control" type="file" name="backImg"></div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="custom-control custom-checkbox small"></div>
                                        </div><button class="btn btn-primary d-block btn-user w-100" type="submit">Đăng ký</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>